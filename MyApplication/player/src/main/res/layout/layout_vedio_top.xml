<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:id="@+id/ll_top"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/bg_video_system_status"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="标题"
            android:id="@+id/tv_title"
            android:textColor="@color/half_white"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_battery"
            android:background="@drawable/ic_battery_40"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:id="@+id/tv_titme"
            android:layout_marginRight="8dp"
            android:text="系统时间"
            android:textColor="@color/half_white"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/bg_video_volume_control"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/iv_voice"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_voice"/>

        <SeekBar
            android:id="@+id/seekBar"
            style="@android:style/Widget.SeekBar"
            android:progress="10"
            android:layout_width="match_parent"
            android:minHeight="6dp"
            android:progressDrawable="@drawable/style_seekbar"
            android:maxHeight="6dp"
            android:thumb="@drawable/video_progress_thumb"
            android:thumbOffset="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>